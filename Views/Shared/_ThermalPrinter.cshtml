@model ThermalPrinters

<div>
    <table class="styled-table">
        <tbody>
            <tr>
                <td width="100px" align="center">@Model.CbBrand.Name</td>
                <td width="110px" align="center">@Model.CbModel.Name</td>
                <td width="150px" align="center">@Model.PartNumber</td>
                <td width="200px" align="center">@Model.Description</td>
                <td width="90px" align="center">@Model.Dpi</td>
                <td width="100px" align="center">@Model.CurrentNumber</td>
                <td width="120px" align="center">@Model.Price.ToString("c")</td>
                <td width="60px" align="center"><img src="@Model.Image" width="60" /></td>
                <td width="120px" align="center">                                        
                    <a class="btn btn-primary" asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-thermalPrintersId="@Model.Id">
                        Dodaj u korpu
                    </a>            
                </td>
            </tr>
        </tbody>
    </table>
</div>

